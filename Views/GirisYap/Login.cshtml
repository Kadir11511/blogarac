@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Otonom Araç Kiralama - Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="//fonts.googleapis.com/css?family=Cormorant+SC:300,400,500,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
</head>

<body>
    <div class="padding-all" style="background-image: url('@Url.Content("~/web/images/luksarac3.jpeg")'); background-size: cover; background-position: center; height: 100vh;">
        <div class="header">
            <h1 style="font-family: 'Cormorant SC', serif; font-size: 2.5em; color: #fff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);">Otonom Araç Kiralama Giriş Formu</h1>
        </div>

        <div class="design-w3l" style="background-color: rgba(0, 0, 139, 0.9); border-radius: 15px; padding: 30px; max-width: 400px; margin: 0 auto; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
            <h2 style="text-align: center; color: #fff; margin-bottom: 20px; font-family: 'Open Sans', sans-serif;">LOGİN EKRANI</h2>
            <div class="mail-form-agile">
                @using (Html.BeginForm("Login", "GirisYap", FormMethod.Post)) {
                <input type="text" name="Kullanici" placeholder="Kullanıcı Adınız..." required="" style="margin-bottom: 15px; padding: 10px; border-radius: 5px; border: 1px solid #fff; width: 100%; color: #fff; background-color: #000080; font-weight: bold;" />
                <input type="password" name="Sifre" class="padding" placeholder="Şifreniz..." required="" style="margin-bottom: 20px; padding: 10px; border-radius: 5px; border: 1px solid #fff; width: 100%; color: #fff; background-color: #000080; font-weight: bold;" />
                <input type="submit" value="Giriş Yap" style="background-color: #28a745; color: #fff; border: none; padding: 10px 15px; border-radius: 5px; cursor: pointer; width: 100%; font-weight: bold;" />
                }
            </div>
            <div class="clear"> </div>
        </div>

        <div class="footer" style="margin-top: 20px; text-align: center;">
            <p style="color: #fff; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);">© 2024 Otonom Araç Kiralama. Tüm Hakları Saklıdır | Design by *Kadir KAVAL*</p>
        </div>
    </div>
</body>

</html>
