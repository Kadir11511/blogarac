@using triptravel.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Otonom Araç Kiralama";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .header-banner {
            text-align: center;
            margin: 20px auto;
            padding: 10px 0;
            position: relative;
        }

            .header-banner h2 {
                font-size: 36px;
                color: #333;
                margin: 0;
                display: inline-block;
                vertical-align: middle;
            }

            .header-banner img {
                width: 40px;
                height: 40px;
                vertical-align: middle;
                margin-right: 10px;
            }

        .slider-container {
            position: relative;
            width: 80%;
            margin: 20px auto;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .slider {
            display: flex;
            transition: transform 0.7s ease-in-out;
        }

            .slider img {
                width: 100%;
                height: 400px;
                object-fit: cover;
            }

        .slider-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            border: none;
            padding: 10px;
            cursor: pointer;
            z-index: 10;
            border-radius: 50%;
        }

            .slider-arrow.left {
                left: 15px;
            }

            .slider-arrow.right {
                right: 15px;
            }

        .content {
            margin: 40px auto;
            padding: 30px;
            background: #fff;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            max-width: 900px;
        }

            .content h3 {
                text-align: center;
                color: #333;
                font-size: 28px;
                margin-bottom: 20px;
            }

            .content p {
                text-align: center;
                line-height: 1.8;
                color: #666;
            }

        /* Haberler bölümü stili */
        #news-container {
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            max-width: 900px;
            text-align: center;
        }

        .news-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .news-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            max-width: 300px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

            .news-card img {
                width: 100%;
                height: auto;
                object-fit: cover;
            }

            .news-card h3 {
                font-size: 18px;
                margin: 10px;
            }

            .news-card p {
                font-size: 14px;
                margin: 10px;
                color: #666;
            }

            .news-card a {
                display: block;
                margin: 10px;
                color: #007bff;
                text-decoration: none;
            }

                .news-card a:hover {
                    text-decoration: underline;
                }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const slider = document.querySelector('.slider');
            const slides = document.querySelectorAll('.slider img');
            const prevButton = document.querySelector('.slider-arrow.left');
            const nextButton = document.querySelector('.slider-arrow.right');

            let currentIndex = 0;

            function updateSlider() {
                const width = slides[0].clientWidth;
                slider.style.transform = `translateX(-${currentIndex * width}px)`;
            }

            nextButton.addEventListener('click', () => {
                currentIndex = (currentIndex + 1) % slides.length;
                updateSlider();
            });

            prevButton.addEventListener('click', () => {
                currentIndex = (currentIndex - 1 + slides.length) % slides.length;
                updateSlider();
            });

            // Haberler API'sinden verileri çekme
            fetch("http://localhost:44311/News/GetNews")
                .then(response => response.json())
                .then(data => {
                    let newsGrid = document.querySelector(".news-grid");
                    data.forEach(news => {
                        newsGrid.innerHTML += `
                                <div class="news-card">
                                    <img src="${news.ImageUrl}" alt="${news.Title}">
                                    <h3>${news.Title}</h3>
                                    <p>${news.Description}</p>
                                    <a href="${news.Url}" target="_blank">Devamını Oku</a>
                                </div>
                            `;
                    });
                })
                .catch(error => console.error("Haberler yüklenirken bir hata oluştu:", error));
        });
    </script>
</head>
<body>
    <!-- Header Banner -->
    <div class="header-banner">
        <h2>Araç Blog Sayfası</h2>
    </div>

    <!-- Slider -->
    <div class="slider-container">
        <button class="slider-arrow left">&#8249;</button>
        <div class="slider">
            @foreach (var x in Model)
            {
                <img src="@x.BlogImage" alt="Araç Görseli">
            }
        </div>
        <button class="slider-arrow right">&#8250;</button>
    </div>

    <!-- Content -->
    <div class="content">
        <h3>Araç Blogu ile Geleceğe Yolculuk</h3>
        <p>Geleceğin teknolojisini bugünden keşfedin! Araçlarımızla hem güvenli hem de keyifli bir yolculuğa çıkın.</p>
        @Html.Action("Partial1", "Default")
        <div class="grids">
            <div class="box1">
                @Html.Action("Partial3", "Default")
                @Html.Action("Partial4", "Default")
            </div>
        </div>
    </div>

    <!-- Yeni Haberler -->
    <div id="news-container">
        <h2>Yeni Araç Görselleri</h2>
        <div class="news-grid">
            <!-- Haberler buraya yüklenecek -->
        </div>
        <a href="/UnsplashService/Index" style="margin-top: 20px; display: block; font-weight: bold;">Tüm Araçlar</a>

    </div>
</body>
</html>
