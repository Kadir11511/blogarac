@using triptravel.Models.Siniflar
@model List<Blog>
@{
    Layout = null;
}

<div class="con-bot">
    @{ int a = 0;}
    @foreach (var x in Model)
    {
        a++;
        var ss = "left";
        if (a == 3)
        {
            ss = "right";
        }
        else if (a > 3)
        {
            break;
        }

    <div class="@ss">
        <div class="bot-left">
            <img src="@x.BlogImage" class="blog-image" alt="Blog Görseli" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="date">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@Html.Raw(x.Aciklama.Substring(0, 80))...</p>
            <p><a href="/Blog/BlogDetay/@x.ID" class="read-more">Devamını Oku >></a></p>
        </div>
    </div>
    }
    <div class="clear"></div>
</div>

<style>
    .con-bot {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-between;
        margin: 40px auto;
        max-width: 1200px;
    }

    .left, .right {
        display: flex;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: calc(50% - 10px);
    }

    .bot-left {
        flex: 1;
    }

    .blog-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .left-text {
        flex: 2;
        padding: 20px;
    }

        .left-text h4 {
            font-size: 20px;
            color: #1F2937;
            margin-bottom: 10px;
        }

    .date {
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
        display: block;
    }

    .left-text p {
        font-size: 16px;
        line-height: 1.6;
        color: #4A5568;
        margin-bottom: 10px;
    }

    .read-more {
        color: #007BFF;
        text-decoration: none;
        font-weight: bold;
    }

        .read-more:hover {
            text-decoration: underline;
        }

    .clear {
        clear: both;
    }
</style>
